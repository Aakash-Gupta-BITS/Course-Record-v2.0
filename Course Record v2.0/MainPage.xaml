<Page
    x:Class="Course_Record_v2._0.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Course_Record_v2._0"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

    
        <NavigationView PaneDisplayMode="Left" IsBackButtonVisible="Collapsed" Visibility="Visible" IsSettingsVisible="False" IsTapEnabled="True" IsBackEnabled="False"
                        x:Name="NavView" 
                        SelectionChanged="NavView_SelectionChanged" HorizontalAlignment="Stretch" Margin="0,0,0.2,0" VerticalAlignment="Stretch">
            <NavigationView.MenuItems>
                <NavigationViewItemSeparator/>
                <NavigationViewItemHeader Content="All Courses Record"/>
                <NavigationViewItem Content="Contacts" x:Name="ContactMenu"/>
                <NavigationViewItem Content="Courses" x:Name="CourseMenu"/>
                <NavigationViewItem Content="Time Table" x:Name="TimeMenu"/>
                <NavigationViewItemHeader Content="Important Websites" />
                <NavigationViewItem x:Name="SWD" Content="SWD"/>
                <NavigationViewItem x:Name="ERP" Content="ERP"/>
                <NavigationViewItem x:Name="Nalanda" Content="Nalanda"/>
                <NavigationViewItem x:Name="ID" Content="ID"/>
                <NavigationViewItem x:Name="RC" Content="AUGS/AUGR" />
                <NavigationViewItem x:Name="LIB" Content="Library Portal" />
                <NavigationViewItemSeparator/>
            </NavigationView.MenuItems>
            <TextBlock x:Name="Directory" IsTextSelectionEnabled="True"/>
        </NavigationView>
   





    </Grid>
</Page>