<Page
    x:Class="Course_Record_v2._0.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Course_Record_v2._0"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <NavigationView IsPaneOpen="True" PaneDisplayMode="Left" IsBackButtonVisible="Collapsed" IsSettingsVisible="False" IsPaneToggleButtonVisible="False">
            <NavigationView.MenuItems>
                <NavigationViewItem FontFamily="Monaco" FontSize="20" Margin="0,5,0,3"
                                    Content="Home"/>
                <NavigationViewItemSeparator/>
                
                <NavigationViewItem FontFamily="Monaco" FontSize="20" Margin="0,2,0,3"
                                     Content="Courses"/>
                <NavigationViewItem FontFamily="Monaco" FontSize="20" Margin="0,2,0,3"
                                     Content="Teachers"/>
                <NavigationViewItem FontFamily="Monaco" FontSize="20" Margin="0,2,0,3"
                                    Content="Time Table"/>
                <NavigationViewItemSeparator/>
                
            </NavigationView.MenuItems>

            
            
        </NavigationView>
    </Grid>
</Page>