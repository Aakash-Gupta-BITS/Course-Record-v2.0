<Page
    x:Class="Course_Record_v2._0.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Course_Record_v2._0"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Frame x:Name="ContentFrame" Navigated="ContentFrame_Navigated"/>
        <NavigationView PaneDisplayMode="LeftMinimal" IsBackButtonVisible="Visible" Visibility="Visible" IsSettingsVisible="False" IsTapEnabled="True" IsBackEnabled="True"
                        SelectionChanged="NavView_SelectionChanged"
                        BackRequested="BackRequested"
                        x:Name="NavView" />
        <NavigationView PaneDisplayMode="LeftMinimal" IsBackButtonVisible="Visible" Visibility="Collapsed" IsSettingsVisible="False" IsTapEnabled="True" IsBackEnabled="True" 
                        SelectionChanged="SecondNavigationView_SelectionChanged"
                        BackRequested="BackRequested"
                        x:Name="SecondNavigationView" >
            
        </NavigationView>
     </Grid>
</Page>